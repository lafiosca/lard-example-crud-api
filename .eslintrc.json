{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "airbnb-base",
	"rules": {
		"no-tabs": 0,
		"indent": ["error", "tab"],
		"no-console": 0,
		"comma-dangle": ["error", {
			"arrays": "always-multiline",
			"objects": "always-multiline",
			"imports": "always-multiline",
			"exports": "always-multiline",
			"functions": "never"
		}]
	},
	"parserOptions": {
		"sourceType": "script"
	}
}
